#add labels to a plot


import numpy as np
x=np.linspace(0,7,11)
print(x)

y=x**2
print(y)


import matplotlib.pyplot as plt

plt.plot(x,y)
#plt.title("Plot of y = x^2")
plt.xlabel("x values")
plt.ylabel("y values")

plt.show()


#plot titles and position them


import numpy as np
x=np.linspace(0,7,11)
print(x)

y=x**2
print(y)


import matplotlib.pyplot as plt

plt.plot(x,y)
plt.title("Plot of y = x^2",loc='left')
#plt.title("Plot of y = x^2",loc='right')
#plt.title("Plot of y = x^2")

plt.show()
