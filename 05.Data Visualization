
#bar grap

import  matplotlib.pyplot as plt
import numpy as np

student = np.array(["Tim", "John", "Amit", "Jacob", "Karl", "Gary"])
marks = np.array([85, 59, 99, 77, 67, 95 ])
plt.bar(student, marks)

plt.xlabel("Student")
plt.ylabel("Marks")
plt.show()


#pie chart

import  matplotlib.pyplot as plt
import numpy as np

student = np.array(["Tim", "John", "Amit", "Jacob", "Karl", "Gary"])
marks = np.array([85, 59, 99, 77, 67, 95 ])
plt.pie(marks,labels=student,autopct='%2.2f%%')
plt.show()

#line graph

import  matplotlib.pyplot as plt
import numpy as np

x = np.array([1, 9])
y = np.array([4, 12])
plt.plot(x,y)
plt.show()

#Histogram

import matplotlib.pyplot as plt
import numpy as np

arr = np.array([10, 50, 34, 67, 21, 7, 59, 62, 45, 48, 10, 8, 41, 32, 66, 59, 18, 26, 51, 9])
plt.hist(arr, bins = [0, 20, 40, 60, 80])
plt.xlabel("Score")
plt.ylabel("Player")
plt.show()


#Scatter Plot
import  matplotlib.pyplot as plt
x_score= [25, 47, 34, 38, 27, 40, 42, 18]
y_score= [7, 22, 40, 29, 27, 10, 19, 31]
scoreRange= [5, 10, 15, 20, 25, 30, 35, 40]
plt.scatter(x_score, scoreRange, color='r')
plt.scatter(y_score, scoreRange, color='b')
plt.xlabel("Team Score")
plt.ylabel("Score Range")
plt.show()
